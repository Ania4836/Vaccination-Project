<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ScheduleActivity">

    <Button
        android:id="@+id/btnSelectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Vaccination Date"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Date: "
        android:layout_below="@id/btnSelectDate"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvNextDoseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Dose: "
        android:layout_below="@id/tvSelectedTime"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnSelectTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Vaccination Time"
        android:layout_below="@id/tvSelectedDate"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvSelectedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Time: "
        android:layout_below="@id/btnSelectTime"
        android:layout_marginBottom="16dp"/>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvNextDoseDate"
        android:visibility="visible"/>
</RelativeLayout>
