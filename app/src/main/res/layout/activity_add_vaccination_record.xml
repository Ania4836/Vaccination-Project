<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/vaccineNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vaccine Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/dateAdministeredEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date Administered (yyyy-MM-dd)"
        android:inputType="date" />

    <EditText
        android:id="@+id/nextDoseDueDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Next Dose Due Date (yyyy-MM-dd)"
        android:inputType="date" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />

</LinearLayout>
